/* Hero Dark Gradient */
.gradient-dark {
  background: linear-gradient(135deg, #1E1B4B 0%, #4338CA 100%);
}
.hero-bg-overlay {
  position: absolute; top: 0; right: 0; width: 300rpx; height: 300rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  border-radius: 50%; transform: translate(30%, -30%);
}
.relative { position: relative; }
.z-10 { z-index: 10; }
.text-white { color: white; }
.opacity-80 { opacity: 0.8; }

/* 标签与时间 */
.hero-tag-red {
  background: #EF4444; color: white; font-weight: bold; font-size: 20rpx;
  padding: 6rpx 16rpx; border-radius: 8rpx; display: flex; align-items: center;
  line-height: 1;
}
.hero-tag-red::before {
  content: ''; width: 8rpx; height: 8rpx; background: white; border-radius: 50%;
  margin-right: 10rpx; animation: blink 1s infinite;
}
.hero-time { 
  font-size: 26rpx; opacity: 0.9; 
  /* 修复：移除 monospace，使用系统字体 */
  font-weight: 500; letter-spacing: 1rpx;
  color: white; 
}

/* 公司 Logo 容器 */
.company-logo-lg {
  width: 100rpx; height: 100rpx; background: rgba(255,255,255,0.15); backdrop-filter: blur(4px);
  border-radius: 24rpx; display: flex; align-items: center; justify-content: center;
  flex-shrink: 0; /* 防止被压缩 */
}

.btn-hero-action {
  background: #fff; color: var(--primary); border-radius: 99rpx;
  font-weight: 700; font-size: 28rpx; width: 100%; padding: 24rpx 0;
  margin-top: 32rpx; /* 增加上方间距 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 列表卡片 */
.list-card {
  background: #fff; padding: 32rpx; border-radius: 32rpx; /* 统一圆角和内边距 */
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 24rpx; /* 增加卡片间距 */
  box-shadow: var(--shadow-sm);
  transition: transform 0.1s;
}
.hover-scale { transform: scale(0.98); }

.icon-box {
  width: 88rpx; height: 88rpx; border-radius: 24rpx; 
  display: flex; align-items: center; justify-content: center; font-size: 36rpx;
}
.bg-orange-light { background: #FFF7ED; color: #D97706; }
.bg-blue-light { background: #EFF6FF; color: #2563EB; }

.item-title { font-weight: 700; color: var(--text-main); font-size: 30rpx; margin-bottom: 4rpx; }
.time-badge {
  background: #F3F4F6; color: var(--text-sub); font-size: 24rpx; font-weight: 600;
  padding: 8rpx 20rpx; border-radius: 12rpx;
}

@keyframes blink { 50% { opacity: 0.4; } }