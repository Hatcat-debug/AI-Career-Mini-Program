/* 页面容器 */
.page-wrapper { min-height: 100vh; background: #F9FAFB; }

/* Banner 区域 */
.banner-area {
  position: relative; width: 100%; height: 520rpx;
  z-index: 0; /* 确保在底层 */
}
.banner-img { width: 100%; height: 100%; }
.banner-mask {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.7));
}
.banner-content {
  position: absolute; bottom: 140rpx; left: 40rpx; right: 40rpx;
}
.text-white { color: #fff; }
.text-white-70 { color: rgba(255,255,255,0.85); font-size: 26rpx; }

/* 浮动内容区 */
.overlap-container {
  position: relative; 
  z-index: 10; /* 提升层级，防止被 Banner 遮挡 */
  margin-top: -80rpx; /* 向上重叠 */
  padding: 0 32rpx 40rpx;
}

/* 标题栏 */
.section-header {
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 24rpx; padding: 0 8rpx;
}
.section-title { 
  font-size: 32rpx; font-weight: 700; color: #111827;
  text-shadow: 0 2rpx 0 rgba(255,255,255,0.5); /* 增强在深色背景边缘的可读性 */
}
.live-badge {
  background: #FEF2F2; color: #EF4444; font-size: 20rpx; font-weight: 800;
  padding: 4rpx 12rpx; border-radius: 8rpx; display: flex; align-items: center; gap: 8rpx;
}
.pulsing-dot {
  width: 10rpx; height: 10rpx; background: #EF4444; border-radius: 50%;
  animation: pulse-red 1.5s infinite;
}

/* 活跃卡片 */
.active-card {
  background: #fff; padding: 40rpx; border-radius: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.08);
}
.company-info { flex: 1; overflow: hidden; margin-right: 20rpx; }
.info-text { flex: 1; min-width: 0; } /* 允许子元素缩略 */
.text-truncate { white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

.logo-box {
  width: 100rpx; height: 100rpx; background: #F3F4F6; border-radius: 24rpx;
  display: flex; align-items: center; justify-content: center; flex-shrink: 0;
}
.bg-orange-light { background: #FFF7ED; color: #D97706; }
.bg-blue-light { background: #EFF6FF; color: #2563EB; }

/* 倒计时胶囊 */
.countdown-pill {
  background: #EEF2FF; padding: 12rpx 24rpx; border-radius: 20rpx;
  text-align: center; flex-shrink: 0;
}
.time-val { display: block; font-size: 36rpx; font-weight: 800; color: var(--primary); line-height: 1; }
.time-unit { font-size: 20rpx; color: var(--primary); opacity: 0.8; }

.divider { height: 1rpx; background: #F3F4F6; margin: 32rpx 0; }

.action-area { display: flex; justify-content: space-between; align-items: center; }
.tips-text { font-size: 24rpx; color: #9CA3AF; }
.btn-primary-lg {
  margin: 0; background: var(--primary); color: #fff;
  padding: 20rpx 48rpx; border-radius: 20rpx; font-size: 28rpx; font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.3);
}

/* 列表卡片 */
.list-card {
  padding: 32rpx; margin-bottom: 24rpx; display: flex; justify-content: space-between; align-items: center;
}
.card-hover { transform: scale(0.99); background: #F9FAFB; }
.time-tag { 
  font-family: monospace; font-weight: 600; color: #4B5563; 
  background: #F3F4F6; padding: 8rpx 16rpx; border-radius: 12rpx; font-size: 26rpx;
}

@keyframes pulse-red { 0% { opacity: 1; } 50% { opacity: 0.4; } 100% { opacity: 1; } }