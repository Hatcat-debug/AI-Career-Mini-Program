<view class="page-wrapper">
  <!-- 统一 Top Bar -->
  <view class="top-bar">
    <view class="title-lg">职业地图</view>
    <view class="coin-pill">
      <text class="coin-symbol">¥</text>
      <text class="coin-val">2,380</text>
      <image class="avatar-xs" src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"></image>
    </view>
  </view>

  <scroll-view scroll-y class="page-content">
    <view class="container">
      
      <!-- 状态卡片 (改为浅色风格) -->
      <view class="card flex-between">
        <view class="flex-row">
          <view class="job-icon-box">&lt;/&gt;</view>
          <view class="ml-3">
            <view class="title-md">前端工程师</view>
            <view class="sub-text mt-2">Lv.2 | 经验 2年</view>
          </view>
        </view>
        <view class="icon-btn-light">✏️</view>
      </view>

      <!-- 星图容器 (保留深色酷炫感，但作为卡片存在) -->
      <view class="map-card-container">
        <view class="map-header">
          <text class="map-title">生涯星图</text>
          <view class="map-legend">
            <view class="dot active"></view><text>已点亮</text>
          </view>
        </view>

        <view class="galaxy-wrapper">
          <!-- 轨道动画 -->
          <view class="orbit orbit-1"></view>
          <view class="orbit orbit-2"></view>

          <!-- 中心恒星 -->
          <view class="star-center">
            <view class="star-core">&lt;/&gt;</view>
            <view class="star-glow"></view>
          </view>

          <!-- 行星 1 -->
          <view class="planet-orbit-wrap p1-orbit">
            <view class="planet-self-rotate">
              <view class="planet-body">架</view>
              <text class="planet-label">架构师</text>
            </view>
          </view>

          <!-- 行星 2 -->
          <view class="planet-orbit-wrap p2-orbit">
            <view class="planet-self-rotate-rev">
              <view class="planet-body">全</view>
              <text class="planet-label">全栈</text>
            </view>
          </view>
        </view>
      </view>

      <!-- 下方可以增加路线列表 -->
      <view class="section-header mb-3 mt-4">
        <text class="title-md">下一阶段目标</text>
      </view>
      <view class="card">
        <view class="flex-between">
          <view class="flex-row">
            <view class="step-circle">1</view>
            <view class="ml-3">
              <view class="text-bold">掌握 Node.js 高级特性</view>
              <view class="sub-text">后端基础</view>
            </view>
          </view>
          <text class="text-xs text-primary">进行中</text>
        </view>
      </view>

    </view>
  </scroll-view>
</view>