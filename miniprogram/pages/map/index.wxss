/* 状态卡片 */
.job-icon-box {
  width: 100rpx; height: 100rpx; background: #EFF6FF; color: var(--primary);
  border-radius: 24rpx; display: flex; align-items: center; justify-content: center;
  font-size: 40rpx; font-weight: bold;
  flex-shrink: 0;
}
.icon-btn-light {
  width: 80rpx; height: 80rpx; background: #F3F4F6; border-radius: 50%;
  display: flex; align-items: center; justify-content: center; color: var(--text-sub);
}

/* 星图卡片容器 */
.map-card-container {
  background: #0F172A; /* 深蓝背景 */
  border-radius: 40rpx;
  padding: 40rpx; /* 增加内边距 */
  color: #fff;
  min-height: 700rpx;
  position: relative;
  box-shadow: var(--shadow-lg);
  overflow: hidden;
  margin-bottom: 40rpx; /* 增加与下方元素的间距 */
}

.map-header { display: flex; justify-content: space-between; margin-bottom: 40rpx; position: relative; z-index: 10; }
.map-title { font-weight: bold; letter-spacing: 2rpx; font-size: 32rpx; }
.map-legend { font-size: 24rpx; opacity: 0.6; display: flex; align-items: center; gap: 12rpx; }
.dot { width: 12rpx; height: 12rpx; border-radius: 50%; background: #6366F1; }

/* 星系动画 */
.galaxy-wrapper { 
  position: absolute; top: 55%; left: 50%; transform: translate(-50%, -50%); 
  width: 100%; height: 100%;
}

.orbit {
  position: absolute; border: 2rpx dashed rgba(255,255,255,0.15); border-radius: 50%;
  left: 50%; top: 50%; transform: translate(-50%, -50%);
}
.orbit-1 { width: 300rpx; height: 300rpx; }
.orbit-2 { width: 500rpx; height: 500rpx; }

.star-center { 
  position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); z-index: 10; 
}
.star-core {
  width: 120rpx; height: 120rpx; background: linear-gradient(135deg, #6366F1, #A855F7);
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  font-size: 48rpx; font-weight: bold; position: relative; z-index: 2;
  box-shadow: 0 0 40rpx rgba(99, 102, 241, 0.4);
}
.star-glow {
  position: absolute; top: -20rpx; left: -20rpx; right: -20rpx; bottom: -20rpx;
  background: rgba(99, 102, 241, 0.4); border-radius: 50%;
  animation: pulse 3s infinite;
}

.planet-orbit-wrap { position: absolute; top: 50%; left: 50%; }
.p1-orbit { width: 300rpx; height: 300rpx; margin-left: -150rpx; margin-top: -150rpx; animation: spin 20s linear infinite; }
.p2-orbit { width: 500rpx; height: 500rpx; margin-left: -250rpx; margin-top: -250rpx; animation: spin 30s linear infinite reverse; }

.planet-self-rotate { 
  position: absolute; top: -30rpx; left: 50%; margin-left: -30rpx;
  display: flex; flex-direction: column; align-items: center;
  animation: spin 20s linear infinite reverse; 
}
.planet-self-rotate-rev {
  position: absolute; top: -30rpx; left: 50%; margin-left: -30rpx;
  display: flex; flex-direction: column; align-items: center;
  animation: spin 30s linear infinite;
}

.planet-body {
  width: 60rpx; height: 60rpx; background: #1E293B; border: 4rpx solid #60A5FA;
  border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 24rpx;
  box-shadow: 0 0 20rpx rgba(96, 165, 250, 0.4);
}
.planet-label { font-size: 22rpx; color: #93C5FD; margin-top: 8rpx; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5); }

@keyframes spin { 100% { transform: rotate(360deg); } }
@keyframes pulse { 0%, 100% { transform: scale(1); opacity: 0.5; } 50% { transform: scale(1.15); opacity: 0.2; } }

/* 路线列表样式 */
.step-circle {
  width: 56rpx; height: 56rpx; background: #EEF2FF; color: var(--primary);
  border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 26rpx;
}