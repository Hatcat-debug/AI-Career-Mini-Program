.map-container {
  background: #0F172A; min-height: 100vh; color: white;
  padding: 0 32rpx; box-sizing: border-box;
}

/* 暗黑顶栏 */
.top-bar-dark {
  padding-top: 100rpx; display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 40rpx;
}
.text-white { color: #fff; }
.glass-pill {
  background: rgba(255,255,255,0.1); border: 1rpx solid rgba(255,255,255,0.2);
  padding: 8rpx 24rpx; border-radius: 99rpx;
}

/* 玻璃卡片 */
.glass-card {
  background: rgba(30, 41, 59, 0.6);
  backdrop-filter: blur(12px);
  border: 1rpx solid rgba(255,255,255,0.1);
  border-radius: 32rpx; padding: 32rpx; margin-bottom: 60rpx;
  display: flex; justify-content: space-between; align-items: center;
}
.job-icon-box {
  width: 100rpx; height: 100rpx; background: #3B82F6; color: #fff;
  border-radius: 24rpx; display: flex; align-items: center; justify-content: center;
  font-size: 40rpx; font-weight: bold; box-shadow: 0 0 30rpx rgba(59, 130, 246, 0.4);
}
.text-blue-200 { color: #BFDBFE; }
.icon-btn-dark {
  width: 80rpx; height: 80rpx; background: rgba(255,255,255,0.1); border-radius: 50%;
  display: flex; align-items: center; justify-content: center; color: #fff;
}

/* 星系系统 */
.map-wrapper { position: relative; min-height: 800rpx; }
.map-header { display: flex; justify-content: space-between; margin-bottom: 60rpx; }
.section-header-text { font-weight: bold; opacity: 0.9; letter-spacing: 2rpx; }
.map-legend { font-size: 22rpx; opacity: 0.6; display: flex; align-items: center; gap: 12rpx; }
.dot { width: 12rpx; height: 12rpx; border-radius: 50%; background: #6366F1; }

.galaxy-container { position: relative; height: 600rpx; display: flex; align-items: center; justify-content: center; }

/* 轨道线 */
.orbit {
  position: absolute; border: 2rpx dashed rgba(255,255,255,0.15); border-radius: 50%;
  left: 50%; top: 50%; transform: translate(-50%, -50%);
}
.orbit-1 { width: 360rpx; height: 360rpx; }
.orbit-2 { width: 600rpx; height: 600rpx; }

/* 中心恒星 */
.star-center { position: relative; z-index: 10; }
.star-core {
  width: 140rpx; height: 140rpx; background: linear-gradient(135deg, #6366F1, #A855F7);
  border-radius: 50%; display: flex; align-items: center; justify-content: center;
  font-size: 56rpx; font-weight: bold; z-index: 2; position: relative;
}
.star-glow {
  position: absolute; top: -20rpx; left: -20rpx; right: -20rpx; bottom: -20rpx;
  background: rgba(99, 102, 241, 0.4); border-radius: 50%;
  animation: pulse 3s infinite;
}

/* 行星公转逻辑 */
.planet-orbit-wrap {
  position: absolute; top: 50%; left: 50%;
  /* 宽高必须等于轨道直径 */
}
.p1-orbit { width: 360rpx; height: 360rpx; margin-left: -180rpx; margin-top: -180rpx; animation: spin 20s linear infinite; }
.p2-orbit { width: 600rpx; height: 600rpx; margin-left: -300rpx; margin-top: -300rpx; animation: spin 30s linear infinite reverse; }

/* 行星自转抵消 (保持文字水平) */
.planet-self-rotate { 
  position: absolute; top: -40rpx; left: 50%; margin-left: -40rpx; /* 定位到轨道顶部 */
  display: flex; flex-direction: column; align-items: center;
  animation: spin 20s linear infinite reverse; 
}
.planet-self-rotate-rev {
  position: absolute; top: -40rpx; left: 50%; margin-left: -40rpx;
  display: flex; flex-direction: column; align-items: center;
  animation: spin 30s linear infinite;
}

.planet-body {
  width: 80rpx; height: 80rpx; background: #1E293B; border: 4rpx solid #60A5FA;
  border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 28rpx;
  box-shadow: 0 0 20rpx rgba(96, 165, 250, 0.4);
}
.planet-label { font-size: 22rpx; color: #93C5FD; margin-top: 12rpx; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5); }

@keyframes spin { 100% { transform: rotate(360deg); } }
@keyframes pulse { 0%, 100% { transform: scale(1); opacity: 0.5; } 50% { transform: scale(1.15); opacity: 0.2; } }