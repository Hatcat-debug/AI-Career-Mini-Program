/* 顶部设置按钮 */
.icon-btn-settings {
  width: 80rpx; height: 80rpx; background: #fff; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  box-shadow: var(--shadow-sm); color: #4B5563;
}

/* 仪表盘布局 */
.resume-dashboard {
  display: flex; align-items: center; gap: 32rpx;
  padding: 40rpx;
}
.dashboard-left { flex-shrink: 0; }
.dashboard-right { flex: 1; }

/* 修正圆环居中问题 */
.progress-circle {
  width: 140rpx; height: 140rpx; border-radius: 50%;
  /* 使用 conic-gradient 实现圆环进度，80% 为主色，其余为浅色 */
  background: conic-gradient(var(--primary) 0% 80%, #EEF2FF 80% 100%);
  display: flex; align-items: center; justify-content: center;
  position: relative;
}
.circle-inner {
  width: 116rpx; height: 116rpx; background: #fff; border-radius: 50%;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  box-shadow: inset 0 4rpx 10rpx rgba(0,0,0,0.05);
}
.score-num { font-size: 44rpx; font-weight: 800; color: var(--primary); line-height: 1; }
.score-unit { font-size: 20rpx; color: var(--primary); margin-top: 4rpx; }

.btn-outline-sm {
  display: inline-block;
  border: 2rpx solid #E5E7EB; color: #374151;
  padding: 12rpx 32rpx; border-radius: 99rpx; font-size: 24rpx; font-weight: 600;
}

/* Grid 布局修正 */
.resume-grid {
  display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx;
}

/* 统一卡片高度 */
.file-card, .add-card {
  height: 240rpx; border-radius: 32rpx; padding: 32rpx;
  box-sizing: border-box; display: flex; flex-direction: column;
}

/* 文件卡片 */
.file-card {
  background: #fff; box-shadow: var(--shadow-sm);
  justify-content: space-between;
}
.card-top { display: flex; justify-content: space-between; align-items: flex-start; }
.file-icon {
  width: 72rpx; height: 72rpx; background: #EFF6FF; color: #3B82F6;
  border-radius: 16rpx; display: flex; align-items: center; justify-content: center; font-size: 32rpx;
}
.more-options { color: #9CA3AF; font-weight: bold; font-size: 36rpx; line-height: 0.5; margin-top: 10rpx; }

.file-name { font-size: 28rpx; font-weight: 700; color: #1F2937; margin-bottom: 8rpx; 
  white-space: nowrap; overflow: hidden; text-overflow: ellipsis; 
}
.update-time { font-size: 22rpx; color: #9CA3AF; }

/* 新建卡片 */
.add-card {
  background: #F9FAFB; border: 2rpx dashed #D1D5DB;
  align-items: center; justify-content: center; gap: 16rpx;
  color: #6B7280; transition: all 0.2s;
}
.add-card-hover { background: #F3F4F6; border-color: #9CA3AF; }
.plus-symbol { font-size: 56rpx; font-weight: 300; line-height: 1; }
.add-text { font-size: 26rpx; font-weight: 600; }

/* 建议列表 */
.suggestion-row {
  display: flex; align-items: center; padding: 24rpx; border-radius: 20rpx;
  gap: 20rpx; transition: transform 0.1s;
}
.suggestion-row:active { transform: scale(0.99); }

.sug-icon { font-size: 32rpx; }
.sug-content { flex: 1; }
.sug-title { font-size: 28rpx; font-weight: 700; }
.sug-desc { font-size: 22rpx; opacity: 0.8; margin-top: 4rpx; }
.arrow { font-family: monospace; font-weight: bold; }

/* 颜色变体 */
.warn-bg { background: #FFFBEB; border: 1rpx solid #FEF3C7; }
.warn-color { color: #D97706; }
.warn-text { color: #92400E; }

.info-bg { background: #EFF6FF; border: 1rpx solid #DBEAFE; }
.info-color { color: #2563EB; }
.info-text { color: #1E40AF; }