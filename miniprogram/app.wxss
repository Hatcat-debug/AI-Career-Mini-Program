/** app.wxss **/
page {
  /* --- 核心色板 (Indigo Theme) --- */
  --primary: #6366F1;
  --primary-hover: #4F46E5;
  --primary-light: #EEF2FF;
  --secondary: #8B5CF6;
  
  /* --- 中性色 --- */
  --text-main: #111827;
  --text-sub: #6B7280;
  --bg-page: #F3F4F6;
  --bg-card: #FFFFFF;
  --border: #E5E7EB;

  /* --- 阴影系统 (Diffuse Shadows) --- */
  --shadow-xs: 0 2rpx 4rpx rgba(0,0,0,0.02);
  --shadow-sm: 0 4rpx 12rpx rgba(0,0,0,0.04);
  --shadow-md: 0 8rpx 24rpx rgba(0,0,0,0.06);
  --shadow-lg: 0 20rpx 40rpx rgba(99, 102, 241, 0.12);
  --shadow-glow: 0 0 30rpx rgba(99, 102, 241, 0.4);

  /* --- 基础设置 --- */
  background-color: var(--bg-page);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  box-sizing: border-box;
  --safe-bottom: env(safe-area-inset-bottom);
}

/* 通用容器 */
.container {
  padding: 32rpx;
  padding-bottom: calc(40rpx + var(--safe-bottom));
}

/* Flex 工具类 */
.flex-row { display: flex; align-items: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-column { display: flex; flex-direction: column; }
.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }

/* 文本排版 */
.title-lg { font-size: 44rpx; font-weight: 800; line-height: 1.2; color: var(--text-main); }
.title-md { font-size: 34rpx; font-weight: 700; line-height: 1.4; color: var(--text-main); }
.text-bold { font-weight: 700; }
.sub-text { font-size: 26rpx; color: var(--text-sub); }
.text-xs { font-size: 22rpx; }
.text-primary { color: var(--primary); }

/* 通用卡片 */
.card {
  background: var(--bg-card);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-sm);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.card:active { transform: scale(0.995); }

/* 通用按钮 */
button { margin: 0; padding: 0; background: none; line-height: normal; }
button::after { border: none; }

.btn-primary {
  background: var(--primary); color: #fff;
  padding: 20rpx 48rpx; border-radius: 99rpx;
  font-size: 28rpx; font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.25);
}
.btn-primary:active { opacity: 0.9; transform: scale(0.96); }

/* 顶部栏占位 */
.top-bar-placeholder { height: 180rpx; }